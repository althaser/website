{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "schedule": [
    "before 7:00 am"
  ],
  "timezone": "UTC",
  "packageRules": [
    {
      "matchFileNames": [
        "package.json",
        "package-lock.json"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchFileNames": [
        "package.json",
        "package-lock.json"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "automergeType": "pr"
    },
    {
      "matchDatasources": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDatasources": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "automergeType": "pr"
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "gohugoio/hugo"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "gohugoio/hugo"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "automergeType": "pr"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/hugo\\.ya?ml$"],
      "matchStrings": [
        "HUGO_VERSION:\\s*\"?(?<currentValue>[0-9\\.]+)\"?"
      ],
      "depNameTemplate": "gohugoio/hugo",
      "datasourceTemplate": "github-releases"
    }
  ]
}
